/* PYMOL 2.0 DARKSTYLE */


/* Main window */
#extgui,
QMenuBar,
QMenuBar::item /* required with Win10+PyQt4 */
{
    background:     #343434;
    color:          #E8E8E8;
}

QMenuBar::item:selected {
    background:     #ffffff;
    color:          #000000;
}

QLineEdit#command_line
{
    background-color: #3E3E3E;
    border:         1px solid #494949;
    color:          #E8E8E8;
    height:         20px;
}

QLabel#command_label
{
    color: #CACAF3
}

QPlainTextEdit#feedback_browser
{
    border:         1px solid #494949;
    background:     #222222;
    color:          #E8E8E8;
}

#builder QPushButton
{
    border:         1px solid #888;
    border-radius:  3px;
    padding:        1px 3px;
}

#builder QPushButton:hover
{
    background-color:#cecece;
    border: 1px solid #606060;
}

QPushButton:hover[quickbutton=true]
{
    background-color:#444;
    border: 1px solid #60B0DC;
}

QPushButton:pressed[quickbutton=true]
{
    background-color:#666;
}

QPushButton[quickbutton=true]
{
    border:         1px solid #494949;
    border-radius:  3px;
    color:          #cecece;
    padding:        1px 5px;
}

QMainWindow::separator
{
    width:          5px;
    height:         5px;
    border:         none;
    background:     #343434;
}

QMainWindow::separator:hover
{
    background:     #555;
}

QTabWidget::pane
{
    margin: 0px;
    border: 0px;
    padding: 0px;
}

QTabWidget::tab-bar {
    left: 0;
}

QTabBar::tab:selected
{
    color: white;
    background: #343434;
    padding: 3px;
}

QTabBar::tab:!selected
{
    border: 1px solid white;
    color: #919191;
    background: #222222;
    padding: 3px;
    border: 1px solid black
}

QWidget#bottom_frame
{
    background: #222222;
}

